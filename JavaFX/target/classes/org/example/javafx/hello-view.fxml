<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tutorialseu.fxmldemo.FormController" prefHeight="400.0" prefWidth="500.0">
    <top>
        <HBox spacing="10" styleClass="header">
            <Label text="Complex UI Styling" styleClass="header-label" />
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" styleClass="form-grid">
            <Label text="First Name:" />
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" />

            <Label text="Last Name:" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Email:" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" spacing="10" alignment="CENTER_RIGHT">
                <Button text="Submit" fx:id="submitButton" styleClass="submit-button" />
                <Button text="Cancel" fx:id="cancelButton" styleClass="cancel-button" />
            </HBox>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" styleClass="footer">
            <Label text="Â© 2024 TutorialSEU" styleClass="footer-label" />
        </HBox>
    </bottom>
</BorderPane>


